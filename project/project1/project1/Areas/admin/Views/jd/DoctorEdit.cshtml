@model project1.EDM.Doctor

@{
    ViewBag.Title = "DoctorEdit";
    Layout = "~/Areas/admin/Views/Shared/admin_LayoutPage1.cshtml";
}

<h2>DoctorEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
