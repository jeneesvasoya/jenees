            @Html.EditorFor(model => model.df_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.df_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.dl_name, htmlAttributes: new { @class = "control-label col-md-2" })
