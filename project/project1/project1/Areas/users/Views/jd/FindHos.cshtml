@model IEnumerable<project1.EDM.Hospital>
@{
    ViewBag.Title = "FindHos";
    Layout = "~/Areas/users/Views/Shared/user_LayoutPage1.cshtml";
}

<div class="products">
    <div class="container">
        <div class="col-md-12 products-right">
            <div class="agile_top_brands_grids">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 top_brand_left" style="margin-top:50px">
                        <div class="hover14 column">
                            <div class="agile_top_brand_left_grid">
                                *
                                <div class="agile_top_brand_left_grid_pos">

                                </div>
                                <div class="agile_top_brand_left_grid1">
                                    <figure>
                                        <div class="team-grid text-center">
                                            <img src="~/Docs/Hospitals/@item.h_profile_image" alt="image" class="img-responsive" style="height:200px;width:200px" />
                                            <br />
                                            <h5 style="font-weight:bold">@item.h_name </h5>
                                            <br />
                                            <h5 style="font-weight:bold">Email:@item.h_email</h5>  <br />
                                            <h6 style="font-weight:bold">Contact Number:@item.hc_number</h6>
                                            <br />
                                            <span> <a href="/users/jd/Appo1" onclick="BookByHospital(@item.hospital_id)" class="btn btn-warning">Appointment</a></span>
                                        </div>
                                    </figure>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="clearfix"> </div>
            </div>

        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<script>
    function BookByHospital(hosid) {
        $.ajax({
            url: "/users/jd/FindHos",
            type: "POST",
            data: {hosid: hosid },
            dataType: "text",
            success: function () {

            }

        });

    }
</script>